@import '../../config.styl';

.navigation {
	height: 100%;
	display: flex;
	flex-direction: column;
	border-right: 1px solid;

	&--header {
		font-size: 16px;
		line-height: 24px;
	}
	&--list {
		flex: 1;
		overflow: auto;
	}
	&--item {
		display: flex;
		cursor: pointer;
		font-size: 14px;
		position: relative;

		&.active {
			&:after {
				content: '';
				position: absolute;
				top: 0;
				right: 0;
				height: 100%;
				width: 3px;
			}
		}

		&Title {
			flex: 1;
			overflow: hidden;
			text-overflow: ellipsis;
			white-space: nowrap;
			padding-right: 10px;
		}
		&Icon {
			flex-shrink: 0;
			float: right;
			line-height: inherit;
			font-size: 20px;
		}
	}
	&--header,
	&--item {
		line-height: $blockHeight;
		padding: 0 20px;
	}
}