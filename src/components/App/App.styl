@import '../../config.styl';

.app {
	$headerHeight = 65px;
	$asideWidth = 300px;

	height: 100%;
	position: relative;

	&--header {
		position: fixed;
		white-space: nowrap;
		overflow: hidden;
		text-overflow: ellipsis;
		z-index: 1;
		width: 100%;
		height: $headerHeight;
	}

	&--aside {
		position: fixed;
		z-index: 1;
		top: $headerHeight;
		bottom: 0;
		width: $asideWidth;
	}
	&--content {
		padding-top: $headerHeight;
		padding-left: $asideWidth;
	}
}